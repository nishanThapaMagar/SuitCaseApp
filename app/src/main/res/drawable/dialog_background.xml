<!-- rounded_dialog_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" /> <!-- Background color -->
            <corners android:radius="16dp" /> <!-- Adjust the radius as needed -->
        </shape>
    </item>
    <item android:id="@android:id/content">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent color -->
        </shape>
    </item>
</layer-list>
